<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wifi_camera.mylibrary.MainActivity">


    <!--com.joyhonest.wifination.JH_GLSurfaceView
        android:id="@+id/GLSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         /-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/plz_load" />


    <Button
        android:id="@+id/photo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拍照"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Record_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录影"
        app:layout_constraintBottom_toBottomOf="@+id/photo_btn"
        app:layout_constraintLeft_toRightOf="@+id/photo_btn"
        app:layout_constraintTop_toTopOf="@+id/photo_btn" />

    <Button
        android:id="@+id/SetMode0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Led Mode0"
        app:layout_constraintBottom_toBottomOf="@+id/Record_btn"
        app:layout_constraintLeft_toRightOf="@+id/Record_btn"

        app:layout_constraintTop_toTopOf="@+id/Record_btn" />


    <Button
        android:id="@+id/SetMode1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Led mode1"
        app:layout_constraintBottom_toBottomOf="@+id/SetMode0"
        app:layout_constraintLeft_toRightOf="@+id/SetMode0"
        app:layout_constraintTop_toTopOf="@+id/SetMode0" />

    <Button
        android:id="@+id/SetMode2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Led mode2"
        app:layout_constraintBottom_toBottomOf="@+id/SetMode0"
        app:layout_constraintLeft_toRightOf="@+id/SetMode1"
        app:layout_constraintTop_toTopOf="@+id/SetMode0" />

    <Button
        android:id="@+id/ReadMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ReadMode"
        app:layout_constraintBottom_toBottomOf="@+id/SetMode0"
        app:layout_constraintLeft_toRightOf="@+id/SetMode2"
        app:layout_constraintTop_toTopOf="@+id/SetMode0" />


    <Button
        android:id="@+id/stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        app:layout_constraintBottom_toBottomOf="@+id/SetMode0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SetMode0" />

    <TextView
        android:id="@+id/RecortTime_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="#FFFF0000"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/Record_btn"
        app:layout_constraintRight_toRightOf="@+id/Record_btn"
        app:layout_constraintTop_toBottomOf="@+id/Record_btn" />

    <TextView
        android:id="@+id/tvCamera"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_blue"
        android:gravity="center"
        android:text="摄像显示"
        android:textColor="@color/dark_blue"
        android:textSize="23sp"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="@+id/SetMode2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
